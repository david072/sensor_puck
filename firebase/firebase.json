{
  "hosting": {
    "predeploy": "cd $PROJECT_DIR/../web; flutter build web --release",
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
